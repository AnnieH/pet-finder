.pet-icon {
	min-height: 200px;
}

.dog-icon {
	background: url(<%= asset_path('dog.png') %>);
	background-size: contain;
	background-repeat:no-repeat;
	background-position: center center;
}

.dog-icon.active {
	background-image: url(<%= asset_path('dog-active.png') %>);
}

.cat-icon {
	background: url(<%= asset_path('cat.png') %>);
	background-size: contain;
	background-repeat:no-repeat;
	background-position: center center;
}

.cat-icon.active {
	background-image: url(<%= asset_path('cat-active.png') %>);
}

.other-icon {
	background: url(<%= asset_path('other.png') %>);
	background-size: contain;
	background-repeat:no-repeat;
	background-position: center center;
}

.other-icon.active {
	background-image: url(<%= asset_path('other-active.png') %>);
}